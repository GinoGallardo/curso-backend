<!DOCTYPE html>
<html>
<head>
    <title>Real-Time Products List</title>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();

        function addProduct() {
            const productName = document.getElementById('productName').value;
            const product = { id: Date.now(), name: productName };
            socket.emit('addProduct', product);
        }

        function removeProduct(productId) {
            socket.emit('removeProduct', productId);
        }

        socket.on('initialProducts', (products) => {
            displayProducts(products);
        });

        socket.on('updatedProducts', (products) => {
            displayProducts(products);
        });

        function displayProducts(products) {
            const productList = document.getElementById('productList');
            productList.innerHTML = '';

            products.forEach((product) => {
                const listItem = document.createElement('li');
                listItem.innerHTML = `${product.name} <button onclick="removeProduct(${product.id})">Remove</button>`;
                productList.appendChild(listItem);
            });
        }
    </script>
</head>
<body>
    <h1>Real-Time Products List</h1>
    <ul id="productList">
        
    </ul>
    <form onsubmit="addProduct(); return false;">
        <input type="text" id="productName" placeholder="Product name" required />
        <button type="submit">Add Product</button>
    </form>
</body>
</html>
